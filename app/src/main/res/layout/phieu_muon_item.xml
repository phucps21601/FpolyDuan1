<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/darker_gray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã phiếu mượn :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/item_phieumuon_ma"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Người tạo :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/item_phieumuon_nguoitao"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sách :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/item_phieumuon_tensach"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá thuê :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/item_phieumuon_giathue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Người mượn :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/item_phieumuon_nguoimuon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày mượn :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/item_phieumuon_ngaymuon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày trả :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/item_phieumuon_ngaytra"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit"
        android:layout_gravity="right"
        android:layout_marginTop="-140dp"
        android:layout_marginRight="60dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete"
        android:layout_gravity="right"
        android:layout_marginTop="-24dp"
        android:layout_marginRight="25dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Trả sách"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        />
</LinearLayout>